{% if startupweekend_content('Judge')|length > 0 %}
    <section id="judges" class="x-section white-bg">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="module-header speakers-header">
                        <h4>Judges</h4>
                    </div>
                </div>

                <div class="span12 hero-unit text-center">
                    <h2>This is the Jury</h2>
                </div>

                <div class="span12">
                    <div class="divider-space"></div>
                </div>

                <div class="span12">
                    <div id="speakerscarousel" class="carouselslider speakers-carousel item-4">
                        <ul>
                        {% for judge in startupweekend_content('Judge') %}
                            <li>
                                <div class="item">

                                    <div class="photo-wrap hover_colour">
                                        <img src="{{ judge.avatar.file.thumbnails.person }}" alt=" {{ judge.firstName }}">
                                    </div>

                                    <div class="text-wrap">
                                        <h3>{{ judge.firstName }} {{ judge.lastName }}</h3>

                                        {% if judge.occupation is defined %}
                                            <h5>{{ judge.occupation }}</h5>
                                        {% endif %}

                                        {% if judge.company is defined %}
                                            <h5>{{ judge.company }}</h5>
                                        {% endif %}
                                        <hr class="divider-short center" />
                                        <p class="description">
                                            {% if judge.company is defined %}
                                                {{ judge.shortBio }}
                                            {% else %}
                                                Get to know more about him at the Event.
                                            {% endif %}
                                        </p>
                                    </div>

                                    <div class="social">

                                        {% if judge.urlFacebook is defined %}
                                            <a href="{{ judge.urlFacebook }}" class="icon-wrap small facebook" title="Facebook">
                                                <i class="iconf-facebook"></i>
                                            </a>
                                        {% endif %}

                                        {% if judge.urlTwitter is defined %}
                                        <a href="{{ judge.urlTwitter }}" class="icon-wrap small twitter" title="Twitter">
                                            <i class="iconf-twitter"></i>
                                        </a>
                                        {% endif %}

                                        {% if judge.urlGoogle is defined %}
                                        <a href="{{ judge.urlGoogle }}" class="icon-wrap small google" title="Google+">
                                            <i class="iconf-gplus"></i>
                                        </a>
                                        {% endif %}

                                        {% if judge.urlLinkedIn is defined %}
                                        <a href="{{ judge.urlLinkedIn }}" class="icon-wrap small linkedin" title="LinkedIn">
                                            <i class="iconf-linkedin"></i>
                                        </a>
                                        {% endif %}

                                    </div>

                                </div>
                            </li>
                        {% endfor %}
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endif %}
